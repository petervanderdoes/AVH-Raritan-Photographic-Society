<div class="gallery-item">
    <div class="gallery-item-content">
        <figure class="gallery-item-content-image">
            <a href="{{ image.url_large }}" rel="gallery-0" title="{{ image.caption.title|escape }} by {{ image.caption.credit|escape }}">
                <img alt="{{ image.caption.title|escape }}" width="{{ image.dimensions.width }}" height="{{ image.dimensions.height }}" src="{{ image.url_thumb }}">
            </a>
            <figcaption class="wp-caption-text showcase-caption">{{ image.caption.title|escape }}<br>
                <span class="wp-caption-credit">Photo: {{ image.caption.credit|escape }}</span>
                {% if image.award %}
                    <br><span class="gallery-item-award">Award: {{ image.award|escape }}</span>
                {% endif %}
            </figcaption>
        </figure>
    </div>
</div>
