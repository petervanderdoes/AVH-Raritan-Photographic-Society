<script>
    /* push in config for this share instance */
    rps_shareconfig.push({
        "id": "{{ id }}",
        "url": "{{ url }}",
        "title": "{{ title }}"
    });
</script>
<div class="{{ id }} fix">
    <div class="fix">
        <ul class="rrssb-buttons fix">
            {% for key,value in networks %}
                {% if key != 'email' %}
                    <li class="{{ key }}">
                        <a onclick="rpssocial.share.click('{{ id }}', '{{ key }}');" href="javascript:void(0);">
                            <i class="fa fa-{{ value.icon }}"></i>
                            <span class="text">{{ value.text }}</span>
                        </a>
                    </li>
                {% else %}
                    <li class="{{ key }} rrssb-buttons">
                        <a href="mailto:?subject={{ title }}&body={{ title }}: {{ url }}">
                            <i class="fa fa-{{ value.icon }}"></i>
                            <span class="text">{{ value.text }}</span>
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
</div>